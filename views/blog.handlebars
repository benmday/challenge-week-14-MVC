<div class='text-left' id='blog-box'>
  <h2>{{title}}</h2>
  <p>{{contents}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  <h6>Comments:</h6>
  {{#each comments as |comment|}}
    <div id='comment-box'>
      <p>{{comment.comment}}</p>
      <p>Posted by: {{user.username}}</p>
    </div>
  {{/each}}
  <button class='btn btn-primary' id='comment-btn'>Comment</button>
  <div class='form-group' id='comment-div'>
    <label for='password-login'>Write a comment:</label>
    <input class='form-input' type='text' id='comment-contents' />
    <button
      class='btn btn-primary'
      id='post-btn'
      data-id='{{id}}'
      type='submit'
    >Post</button>
  </div>
</div>

<script src='../js/comment.js'></script>